{
  "name": "fix-grammar",
  "productName": "fix-grammar",
  "version": "1.0.0",
  "description": "Modern Electron template with React, shadcn/ui, and AI-ready development",
  "main": ".vite/build/main.js",
  "private": true,
  "engines": {
    "node": ">=16.7.0"
  },
  "scripts": {
    "dev": "electron-forge start",
    "package": "electron-forge package",
    "build": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format .",
    "format:write": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "fix": "bun run check:fix && bun run check && bun run typecheck",
    "typecheck": "tsc -p tsconfig.json --noEmit --skipLibCheck",
    "verify": "bun run fix && bun run test",
    "verify-full": "bun run fix && bun run test && bun run build && bun run docs",
    "analyze:bundle": "BUNDLE_ANALYZE=true BUNDLE_ANALYZE_OPEN=true bun run build",
    "docs": "node scripts/generate-structure-docs.mjs",
    "clear-settings": "node scripts/clear-settings.mjs",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:unit": "vitest",
    "test:e2e": "bun run package && playwright test",
    "test:all": "vitest run && bun run package && playwright test"
  },
  "author": "Yuriy Babyak",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@electron-forge/publisher-github": "^7.10.2",
    "@electron-forge/shared-types": "^7.10.2",
    "@electron/fuses": "~2.0.0",
    "@playwright/test": "^1.57.0",
    "@tanstack/router-plugin": "^1.141.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-plugin-react-compiler": "1.0.0",
    "electron": "^39.2.7",
    "electron-devtools-installer": "^4.0.0",
    "electron-playwright-helpers": "^2.0.1",
    "jsdom": "^27.3.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^4.1.18",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@ai-sdk/google": "^3.0.1",
    "@ai-sdk/openai": "^3.0.1",
    "@ai-sdk/openai-compatible": "^2.0.1",
    "@ai-sdk/xai": "^3.0.1",
    "@base-ui/react": "^1.0.0",
    "@icons-pack/react-simple-icons": "^13.8.0",
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@orpc/client": "^1.12.3",
    "@orpc/server": "^1.12.3",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-router": "^1.141.2",
    "@tanstack/react-router-devtools": "^1.141.2",
    "ai": "^6.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^11.0.2",
    "i18next": "^25.7.2",
    "lucide-react": "^0.561.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-i18next": "^16.5.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "update-electron-app": "^3.1.2",
    "zod": "^4.1.13"
  }
}
